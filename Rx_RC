#include <RH_ASK.h>
#include <SPI.h>

#define m1 2
#define m2 3
#define m3 4
#define m4 5

RH_ASK driver;

void setup()
{
    pinMode(m1, OUTPUT);
    pinMode(m2, OUTPUT);
    pinMode(m3, OUTPUT);
    pinMode(m4, OUTPUT);
    Serial.begin(9600);
    if (!driver.init())
        Serial.println("init failed");
}

void loop()
{
    uint8_t buf[1];
    uint8_t buflen = sizeof(buf); 
 
    if (driver.recv(buf, &buflen))
    {
      d_out = String((char*)buf);
      if(d_out=='f')
      {  
       digitalWrite(m1,HIGH);
       digitalWrite(m2,LOW);
       digitalWrite(m3,HIGH);
       digitalWrite(m4,LOW);
       Serial.println("Forward");
      }  
      else if(d_out=='b')
      {
       digitalWrite(m1,LOW);
       digitalWrite(m2,HIGH);
       digitalWrite(m3,LOW);
       digitalWrite(m4,HIGH);
       Serial.println("Backward");
      }
      else if(d_out=='r')
      {
       digitalWrite(m1,HIGH);
       digitalWrite(m2,LOW);
       digitalWrite(m3,LOW);
       digitalWrite(m4,LOW);
       Serial.println("Left");
      }
      else if(d_out=='l')
      {
       digitalWrite(m1,LOW);
       digitalWrite(m2,LOW);
       digitalWrite(m3,HIGH);
       digitalWrite(m4,LOW);
       Serial.println("Right");
      }
      else if(d_out=='s')            
      {
       digitalWrite(m1,LOW);
       digitalWrite(m2,LOW);
       digitalWrite(m3,LOW);
       digitalWrite(m4,LOW);
       Serial.println("Stop");
      }
    }
}
